{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "lib": [
      "ES6",
      "DOM"
    ],
    "allowJs": true,
    "jsx": "react-jsx",
    "declaration": true,
    "rootDir": "./src",
    "isolatedModules": true,
    "strict": false,
    "moduleResolution": "node",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
